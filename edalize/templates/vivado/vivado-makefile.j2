NAME := {{ name }}
BITSTREAM := {{ bitstream }}
PART := {{ part }}

all: $(BITSTREAM)

$(BITSTREAM):  $(NAME)_run.tcl $(NAME).xpr
	vivado -mode batch -source $^

$(NAME).xpr: $(NAME).tcl
	vivado -mode batch -source $<

ifdef HWTARGET
program: $(NAME).bit $(NAME)_pgm.tcl
	vivado -mode batch -source $(NAME)_pgm.tcl -tclargs $(HWTARGET)
else
program: $(NAME).bit $(NAME)_pgm.tcl
	vivado -mode batch -source $(NAME)_pgm.tcl
endif
      

build-gui: $(NAME).xpr
	vivado $<

$(NAME).runs/synth_1: $(NAME)_synth.tcl $(NAME).xpr
	vivado -mode batch -source $^

synth: $(NAME).runs/synth_1

pgm: $(NAME)_pgm.tcl $(BITSTREAM)
	vivado -quiet -nolog -notrace -mode batch -source $< -tclargs $(PART) $(BITSTREAM)

.PHONY: pgm
