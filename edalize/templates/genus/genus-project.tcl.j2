############################################
#
# Auto-generated project tcl file:
#  * sets up variable
#  * runs customized script
#
############################################
sh date

{% if toplevel -%}
set TOP_MODULE {{ toplevel }}
{%- endif %}

{% if genus_script -%}
set GENUS_SCRIPT {{ genus_script }}
{% else %}
set GENUS_SCRIPT genus_script.tcl
{%- endif %}

{% if common_config -%}
source {{ common_config }}
{%- endif %}

{% if jobs -%}
set nproc [exec nproc]
set_multi_cpu_usage -local_cpu {{jobs}}
{%- endif %}

set READ_SOURCES {{ name }}-read-sources

# A variable containing all top-module parameters passed by FuseSoC, ready to
# be passed on to the `elaborate`-command (within the `$GENUS_SCRIPT` like this:
#
#     elaborate -parameters "$ELABORATE_PARAMETERS" "$TOP_MODULE"
set ELABORATE_PARAMETERS {{ parameters }}

{% if script_dir -%}
set SCRIPT_DIR {{ script_dir }}
{% else %}
set SCRIPT_DIR "./"
{% endif %}

{% if report_dir -%}
set REPORT_DIR {{ report_dir }}
sh mkdir -p ${REPORT_DIR}
{% else %}
set REPORT_DIR "./"
{%- endif %}

############################################
#
# Run custom script
#
############################################
source ${SCRIPT_DIR}/${GENUS_SCRIPT}

############################################
#
#  all done -- exit
#
############################################
sh date